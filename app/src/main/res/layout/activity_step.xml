<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:padding="0dp">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.google.android.exoplayer2.ui.PlayerView>


    <!--<ImageView-->
    <!--android:id="@+id/iv_step_thumbnail"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="200dp"-->
    <!--android:adjustViewBounds="true"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:background="@drawable/red"-->
    <!--android:layout_margin="@dimen/default_margin"-->
    <!--android:padding="@dimen/default_padding"-->
    <!--android:contentDescription="@string/trailer_content_description"-->
    <!--/>-->
    <LinearLayout
        android:id="@+id/activity_step_instruction_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_step_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/double_margin"
            android:background="@drawable/red"
            android:padding="@dimen/default_padding"
            tools:text="Benktesh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_previous"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight="1"
                android:background="@drawable/red"
                android:padding="@dimen/default_padding"
                android:text="@string/button_previous" />

            <Button
                android:id="@+id/button_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight="1"
                android:background="@drawable/red"
                android:padding="@dimen/default_padding"
                android:text="@string/button_next" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>